<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Departments</title>
    <style>
        table, td, th {
        border: 1px solid;
        border-collapse: collapse;
        }
        
        td {
            padding: 10px;
        }
    </style>
</head>
<body>
    <table>
        <tr>
            <th>dept_no</th>
            <th>dept_name</th>
        </tr>
        <% departments.forEach( i => { %>
            <tr>
                <td><%= i.dept_no %></td>
                <td><%= i.dept_name %></td>
                <td><a href="<%= `/update?deptNo=${i.dept_no}`%>">Update</a></td>
                <td><a href="<%= `/delete?deptNo=${i.dept_no}`%>">Delete</a></td>
            </tr>
        <% }) %>
    </table>
    <br>
    <a href="/add">Add Department</a>
</body>
</html>